<div class="row mt-4 mb-5">
    <div class="col-md-4 m-auto">
        <div class="card card-body">
                <div class="col">
                    <div class="card h-100">
                        <img src="/uploads/<%= image.image %>  " alt="" >
                        <div class="card-body">
                            <p><%= image.description %> </p>
                        </div>
                    </div>
                    <h6 class="mt-3">Read comments:</h6>
                    <% comments.map(comment => { %>
                        <% if(comment.image == image.id){ %>
                            <div class="card card-body mt-2">
                                <h6><%= comment.name %></h6>
                                <h6><%= comment.date.toLocaleString() %></h6>
                                <p><%= comment.comment %> </p>
                            </div>
                        <% } %> 
                    <% }); %> 
                </div>
            </div>
        <h6 class="mt-3">share your comments: </h6>
        <%- include('./partials/errors.ejs') %> 
        <div class="card card-body ">
            <form action="/comment/<%= image.id %> " method='POST'>
                <div class="row mb-2 justify-content-center">
                    <div class="col-sm-10">
                        <input type="text" name="name" id="name" class="form-control" placeholder="Name">
                    </div>
                </div>
                <div class="row mb-2 justify-content-center">
                    <div class="col-sm-10">
                        <textarea name="comment" id="comment" class="form-control" placeholder="Write your comments..."></textarea>
                    </div>
                </div>
                <div class="row mb-2 justify-content-center">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary form-control">Share</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>